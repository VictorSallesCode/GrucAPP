<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">


    <ImageView
        android:id="@+id/logotipo"
        android:layout_width="71dp"
        android:layout_height="55dp"
        android:src="@drawable/logotipo"
        app:layout_constraintBottom_toTopOf="@+id/dividerTop"
        app:layout_constraintEnd_toStartOf="@+id/tvDetailTitle"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.638" />

    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="44dp"
        android:text="Detalhes do FuncionÃ¡rio"
        android:textColor="@color/green"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/tvDetailTitle"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imgDetailProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerTop" />

    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/blue"
        android:text="Carregando..."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgDetailProfile"
        app:layout_constraintTop_toTopOf="@id/imgDetailProfile" />

    <TextView
        android:id="@+id/tvDetailCpf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CPF: ..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgDetailProfile"
        app:layout_constraintTop_toBottomOf="@id/tvDetailName" />

    <TextView
        android:id="@+id/lblCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Status dos Certificados"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgDetailProfile" />

    <View
        android:id="@+id/statusDetailAvsec"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblCert" />

    <TextView
        android:id="@+id/lblDetailAvsec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/blue"
        android:text="AVSEC"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/statusDetailAvsec"
        app:layout_constraintTop_toTopOf="@id/statusDetailAvsec" />

    <TextView
        android:id="@+id/tvDetailDateAvsec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Validade: --/--/----"
        app:layout_constraintStart_toEndOf="@id/statusDetailAvsec"
        app:layout_constraintTop_toBottomOf="@id/lblDetailAvsec" />

    <View
        android:id="@+id/statusDetailCnv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusDetailAvsec" />

    <TextView
        android:id="@+id/lblDetailCnv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="CNV"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/statusDetailCnv"
        app:layout_constraintTop_toTopOf="@id/statusDetailCnv" />

    <TextView
        android:id="@+id/tvDetailDateCnv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Validade: --/--/----"
        app:layout_constraintStart_toEndOf="@id/statusDetailCnv"
        app:layout_constraintTop_toBottomOf="@id/lblDetailCnv" />

    <View
        android:id="@+id/statusDetailCred"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusDetailCnv" />

    <TextView
        android:id="@+id/lblDetailCred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Credencial"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@id/statusDetailCred"
        app:layout_constraintTop_toTopOf="@id/statusDetailCred" />

    <TextView
        android:id="@+id/tvDetailDateCred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Validade: --/--/----"
        app:layout_constraintStart_toEndOf="@id/statusDetailCred"
        app:layout_constraintTop_toBottomOf="@id/lblDetailCred" />

    <Button
        android:id="@+id/btnDetailBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/green"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>